-- component layer-card:
ftd.image-src card-image:
caption title:
optional body body:
string cta-link:
boolean $hover: false
boolean $mouse-in: false

-- ds.column:
width.fixed.px: 440
width if { ftd.device == "mobile" }: fill-container
height.fixed.px: 440
inset: $ds.spaces.inset-square.zero
radius: $ds.radius.zero
$on-mouse-enter$: $ftd.set-bool($a = $layer-card.hover, v = true)
$on-mouse-leave$: $ftd.set-bool($a = $layer-card.hover, v = false)

-- ftd.image:
src: $layer-card.card-image
width.fixed.px: 440
height.fixed.px: 440
width if { ftd.device == "mobile" }: fill-container
border-radius.px: 20
fit: cover

-- ftd.column:
if: { layer-card.hover }
background.solid: #ffffffd1
anchor: parent
bottom.px: 0
left.px: 0
top.px: 0
width: fill-container
height: fill-container
padding.px: 24
align-content: center
spacing.fixed.px: 120
border-radius.px: 20
link: $layer-card.cta-link
 
-- ds.heading-medium: $layer-card.title
align: center
color: #000000

-- ds.copy-regular: $layer-card.body
if: { layer-card.body != NULL }
  
-- end: ftd.column
  
-- end: ds.column

-- end: layer-card












